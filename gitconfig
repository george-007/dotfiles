[core]
	editor = vim +1 +start
[push]
	default = simple
[alias]
	st = status
	ci = commit --verbose
	co = checkout
	cob = checkout -b
    di = diff
    dc = diff --cached
    ec = config --global -e
    rb = rebase
    ff = merge --ff-only
    pulff = pull --ff-only
    fa = fetch --all
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    pom = push origin master
    br = branch
	type = cat-file -t
	dump = cat-file -p
    up = pull --rebase --prune
    pi = cherry-pick
[interactive]
     singlekey = true
[apply]
	whitespace = fix
[branch]
    autosetuprebase = always
[include]
    path = ~/.gitconfig.local
[log]
    decorate = auto
[tag]
    # treat tag names as versions
	sort = version:refname

# vim: set ft=gitconfig:
